# https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{*.bash,*.sh,Makefile}]
indent_style = tab
tab_width = 2

[*.{js,json,jsonnet,hcl,tf,sh,ts,yml,yaml}]
indent_style = space
indent_size = 2

